<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.ScanQrcodeActivity">

    <com.budiyev.android.codescanner.CodeScannerView
        android:id="@+id/scan_qrcode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:autoFocusButtonVisible="false"
        app:flashButtonVisible="false"

        app:frameCornersRadius="1dp"
        app:frameCornersSize="80dp"
        app:frameSize="0.75"
        app:frameThickness="7dp"

        app:maskColor="#00FFFFFF">

    </com.budiyev.android.codescanner.CodeScannerView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Aponte a câmera para o código QR"
        android:textColor="@color/white"
        android:textSize="20sp"


        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="100sp"
        />
</RelativeLayout>